<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PAWS - @ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel=" stylesheet" type="text/css" href="~/Content/materialize.css" />
    <link rel=" stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel=" stylesheet" type="text/css" href="~/Content/animate.css" />
    <link rel=" stylesheet" type="text/css" href="~/Content/animate.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body ng-app="PAWSProject" ng-controller="PAWSProjectController">

    <div class="navbar">
        <div class="logo">
            <a href="~/Home/Index">
                <img src="~/Content/img/logo_white.png" alt="Logo" style="height: 50px;" />
            </a>
        </div>
        <div class="menu">
            <a href="~/Home/About">Our Work</a>
            <a href="~/Home/LocalServices">Local Services</a>
            <div class="dropdown">
                <a href="#" class="dropdown-toggle">How You Can Help</a>
                <div class="dropdown-menu">
                    <a href="~/Home/Adopt">Adopt</a>
                    <a href="~/Home/Advocate">Advocate</a>
                    <a href="~/Home/Donate">Donate</a>
                </div>
            </div>
        </div>
        <a href="~/Home/Donate" class="donate-btn">DONATE</a>
    </div>






    <div>
        @RenderBody()
    </div>

    <footer style="background-color: #002b4e; color: white; padding: 40px 0; text-align: center;">
        <div class="footer-content">
            <img src="~/Content/img/logo_white.png" alt="ASPCA Logo" style="height: 100px; margin-bottom: 20px;">
            <div class="footer-links">
                <a href="~/Home/About" style="color: white; margin: 0 15px; text-decoration: none;">About Us</a>
                <a href="~/Home/Contact" style="color: white; margin: 0 15px; text-decoration: none;">Contact</a>
                <a href="~/Home/Donate" style="color: white; margin: 0 15px; text-decoration: none;">Donate</a>
            </div>
            <p style="margin: 20px 0;">
                &copy; 2024 Pet Adoption Welfare System. All rights reserved.
                <br /> The PAWS is a non-for-profit organization.
                <a href="~/Home/PrivacyPolicy" style="color: white; text-decoration: underline;">Privacy Policy</a>
                <a href="~/Home/LegalInfo" style="color: white; text-decoration: underline;">Legal Info</a>
            </p>
            <div class="footer-social" style="margin: 20px 0;">
                <a href="https://www.facebook.com/pawsphilippines" style="color: white; margin: 0 10px;"><i class="fab fa-facebook-f"></i></a>
                <a href="https://twitter.com/pawsphilippines" style="color: white; margin: 0 10px;"><i class="fab fa-twitter"></i></a>
                <a href="https://www.youtube.com/watch?v=ADVlWzbfNbw" style="color: white; margin: 0 10px;"><i class="fab fa-youtube"></i></a>
                <a href="https://www.instagram.com/pawsphilippines" style="color: white; margin: 0 10px;"><i class="fab fa-instagram"></i></a>
                <a href="https://www.facebook.com/pawsphilippines" style="color: white; margin: 0 10px;"><i class="fab fa-tiktok"></i></a>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/materialize.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular-route.min.js"></script>
    <script src="~/Scripts/AngularScripts/Module.js"></script>
    <script src="~/Scripts/AngularScripts/Controller.js"></script>
    <script src="~/Scripts/AngularScripts/Service.js"></script>
</body>
</html>
