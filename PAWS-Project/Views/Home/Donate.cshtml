@{
    ViewBag.Title = "Donate";
}

<div class="section center-align">
    <div class="donate-background">
        <img src="~/Content/img/donate.jpg" alt="Descriptive Alt Text" class="responsive-img">
        <div class="content-wrapper">
            <h2 style="font-weight: 700">Donate to Help Animals</h2>
            <p style="font-size: 18px;">Your generosity transforms lives—every donation directly impacts animals in need.</p>
        </div>
    </div>
</div>

<div class="donation-form-container">
    <div class="donation-tabs">
    </div>
    <div class="donation-steps">
        <span class="donation-step active">1. Scan the QR Code</span>
    </div>
    <div class="donation-qrcode center-align">
        <img src="~/Content/img/donate-gcash.png" alt="GCash QR Code" />
        <img src="~/Content/img/donate-maya.png" alt="Maya QR Code" />
    </div>

    <div class="donation-impact">
        <h3 style="font-weight: 700; text-align: center; margin-top: 20px;">Impact of Your Donation:</h3>
        <ul style="list-style: none; padding: 0; margin: 20px auto; max-width: 600px; font-size: 16px; line-height: 1.8;">
            <li>
                🐾 <strong>Your Php 100</strong> can provide:<br />
                A day's worth of nutritious meals for one shelter animal.
            </li>
            <li>
                🐾 <strong>Your Php 250</strong> can provide:<br />
                Vaccines or deworming for a rescued pet, ensuring they remain healthy and adoptable.
            </li>
            <li>
                🐾 <strong>Your Php 500</strong> can provide:<br />
                Essential grooming and flea treatment for one animal in our care.
            </li>
            <li>
                🐾 <strong>Your Php 1000</strong> can provide:<br />
                Medical care for injured or sick animals, helping them recover and find forever homes.
            </li>
            <li>
                🐾 <strong>Your Php 2500</strong> can provide:<br />
                Spaying or neutering services for up to three animals, helping control the stray population.
            </li>
            <li>
                <strong>Already donated?</strong> Send your donation proof at:<br />
                donation@paws.com.ph
            </li>
        </ul>
    </div>

    <div class="donation-navigation">
        <a href="Index" class="donation-submit back-button">BACK</a>
    </div>
</div>