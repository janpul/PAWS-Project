@{
    ViewBag.Title = "Donate";
}

<div class="donation-form-container">
    <h2 class="donation-header">Donate to Help Animals</h2>
    <div class="donation-tabs">
        <button class="donation-tab active">One Time Donation</button>
        <button class="donation-tab">Monthly Donation</button>
    </div>
    <div class="donation-steps">
        <span class="donation-step active">1. Gift Amount</span>
        <span class="donation-step">2. Billing</span>
        <span class="donation-step">3. Payment</span>
    </div>
    <div class="donation-amounts">
        <button class="amount active">$1000</button>
        <button class="amount">$500</button>
        <button class="amount">$250</button>
        <button class="amount">$100</button>
        <button class="amount">$50</button>
        <button class="amount">Other</button>
    </div>
    <button class="donation-submit">CONTINUE</button>
</div>







