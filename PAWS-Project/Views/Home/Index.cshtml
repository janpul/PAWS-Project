<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('.carousel');
        var instances = M.Carousel.init(elems, {
            fullWidth: true,
            indicators: true
        });


        setInterval(function () {
            instances.forEach(instance => instance.next());
        }, 7000);
    });
</script>

